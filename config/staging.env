# Staging Environment Configuration

# Application
APP_NAME=Vidora
ENVIRONMENT=staging
VERSION=1.0.0-rc.1
DEBUG=false
LOG_LEVEL=info

# Server
PORT=8080
API_BASE_URL=https://api-staging.vidorafilms.com
CORS_ORIGIN=https://staging.vidorafilms.com

# Frontend
NEXT_PUBLIC_API_URL=https://api-staging.vidorafilms.com
NEXT_PUBLIC_APP_URL=https://staging.vidorafilms.com
NEXT_PUBLIC_ENVIRONMENT=staging

# Database
DB_TYPE=postgres
DB_HOST=db-staging.vidorafilms.com
DB_PORT=5432
DB_USER=vidora_staging
DB_PASSWORD=REPLACE_IN_CI_PIPELINE
DB_NAME=vidora_staging

# Authentication
JWT_SECRET=REPLACE_IN_CI_PIPELINE
JWT_EXPIRY=86400 # 24 hours in seconds
REFRESH_TOKEN_EXPIRY=604800 # 7 days in seconds
COOKIE_SECRET=REPLACE_IN_CI_PIPELINE

# Media Storage
UPLOAD_DIR=/var/vidora/uploads
MAX_UPLOAD_SIZE=500 # in MB
MEDIA_BUCKET=vidora-staging-media

# Video Streaming
BUNNY_STORAGE_ZONE=vidora-staging
BUNNY_API_KEY=REPLACE_IN_CI_PIPELINE
BUNNY_HOSTNAME=stream-staging.vidorafilms.com

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=REPLACE_IN_CI_PIPELINE
EMAIL_FROM=no-reply@staging.vidorafilms.com
EMAIL_FROM_NAME=Vidora Films (Staging)

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACK_VIEWS=true
ANALYTICS_TRACK_WATCH_TIME=true

# Payment Processing
STRIPE_PUBLIC_KEY=pk_test_REPLACE_IN_CI_PIPELINE
STRIPE_SECRET_KEY=sk_test_REPLACE_IN_CI_PIPELINE
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_IN_CI_PIPELINE

# Cloud Services
GCP_PROJECT_ID=vidora-staging
GCS_BUCKET=vidora-staging-storage
CLOUDFLARE_ZONE_ID=REPLACE_IN_CI_PIPELINE
CLOUDFLARE_API_TOKEN=REPLACE_IN_CI_PIPELINE

# Deployment
VERCEL_TOKEN=REPLACE_IN_CI_PIPELINE
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/services/REPLACE_IN_CI_PIPELINE
CACHE_PURGE_URL=https://api.cloudflare.com/client/v4/zones/REPLACE_IN_CI_PIPELINE/purge_cache
CACHE_PURGE_TOKEN=REPLACE_IN_CI_PIPELINE

# Feature Flags
FEATURE_STUDENT_FILMMAKER=true
FEATURE_HALL_OF_FAME=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_DARK_MODE=true

# Performance
CACHE_TTL=1800 # 30 minutes in seconds
REDIS_URL=redis://redis-staging.vidorafilms.com:6379
RATE_LIMIT_MAX=2000 # requests per IP per hour
QUERY_COMPLEXITY_LIMIT=200

# Security
ENABLE_CSRF=true
ENABLE_HELMET=true
CONTENT_SECURITY_POLICY=true
ALLOWED_UPLOAD_MIME_TYPES=video/mp4,video/webm,video/quicktime,image/jpeg,image/png,image/webp

# Testing
ENABLE_TEST_ACCOUNTS=true
TEST_USER_EMAIL=test@staging.vidorafilms.com
TEST_USER_PASSWORD=stagingPassword123