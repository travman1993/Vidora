# Development Environment Configuration

# Application
APP_NAME=Vidora
ENVIRONMENT=development
VERSION=0.1.0
DEBUG=true
LOG_LEVEL=debug

# Server
PORT=3000
API_BASE_URL=http://localhost:8000/api
CORS_ORIGIN=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=vidora_dev
DB_PASSWORD=dev_password
DB_NAME=vidora_dev

# Authentication
JWT_SECRET=dev_jwt_secret_key_change_this_in_production
JWT_EXPIRY=86400 # 24 hours in seconds
REFRESH_TOKEN_EXPIRY=604800 # 7 days in seconds
COOKIE_SECRET=dev_cookie_secret_change_this_in_production

# Media Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=500 # in MB
MEDIA_BUCKET=vidora-dev-media

# Video Streaming
BUNNY_STORAGE_ZONE=dev-vidora
BUNNY_API_KEY=dev_bunny_api_key
BUNNY_HOSTNAME=dev-vidora.b-cdn.net

# Email
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
EMAIL_FROM=dev@vidorafilms.com
EMAIL_FROM_NAME=Vidora Films (Dev)

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACK_VIEWS=true
ANALYTICS_TRACK_WATCH_TIME=true

# Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Cloud Services
GCP_PROJECT_ID=vidora-dev
GCS_BUCKET=vidora-dev-storage
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Deployment
VERCEL_TOKEN=your_vercel_token
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/services/your_slack_webhook
CACHE_PURGE_URL=https://api.cloudflare.com/client/v4/zones/your_zone_id/purge_cache
CACHE_PURGE_TOKEN=your_cloudflare_token

# Feature Flags
FEATURE_STUDENT_FILMMAKER=true
FEATURE_HALL_OF_FAME=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_DARK_MODE=true